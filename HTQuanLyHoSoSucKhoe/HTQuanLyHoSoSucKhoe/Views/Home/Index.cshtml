@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- /. NAV SIDE  -->

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Quản lý hồ sơ sức khỏe bệnh nhân
        </h1>
        <ol class="breadcrumb">
            <li class="active">Trang chủ</li>
        </ol>

    </div>
    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Bảng thông tin hồ sơ bệnh nhân      
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên</th>
                                        <th>CCCD</th>
                                        <th>Ngày tạo hồ sơ</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var item in Model ?? new List<HTQuanLyHoSoSucKhoe.Models.Appointment>())

                                    {
                                        <tr class="odd gradeX">
                                            <td>@index</td>
                                            <td>@(item?.Name ?? "Không có dữ liệu")</td>
                                            <td>@(item?.PhoneNumber ?? "Không có dữ liệu")</td>
                                            <td>@(item?.AppointmentDate?.ToString("dd/MM/yyyy") ?? "Không có dữ liệu")</td>
                                            <td><a asp-action="chiTietQuanLyDatKham" asp-controller="QuanLyBenhVien" class="btn btn-info btn-sm">Xem chi tiết</a></td>
                                        </tr>
                                        index++;

                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>
        @section Scripts {
            <script src="~/assets/js/dataTables/jquery.dataTables.js"></script>
            <script src="~/assets/js/dataTables/dataTables.bootstrap.js"></script>
            <script>
                $(document).ready(function() {
                    $('#dataTables-example').dataTable();
                });
            </script>
        }
