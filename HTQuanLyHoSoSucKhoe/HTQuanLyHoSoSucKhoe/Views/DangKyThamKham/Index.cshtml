<div class="breadcrumbs overlay">
	<div class="container">
		<div class="bread-inner">
			<div class="row">
				<div class="col-12">
					<h2>Đăng Ký Lịch Thăm Khám</h2>
					<ul class="bread-list">
						<li><a href="index.html">Trang Chủ</a></li>
						<li><i class="icofont-simple-right"></i></li>
						<li class="active">Đăng Kí Lịch Thăm Khám</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Start Appointment -->
<section class="appointment">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>Chúng Tôi Luôn Sẵn Sàng Hỗ Tợ Bạn. Đặt Lịch Khám Ngay</h2>
					<img src="img/section-img.png" alt="#">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 col-md-12 col-12">
				<form class="form" asp-action="Create" asp-controller="DangKyThamKham"  method="POST">
					<div class="row">
						<div class="col-lg-6 col-md-6 col-12">
							<div class="form-group">
								<!-- Không thêm thuộc tính readonly -->
								<input name="Name" type="text" placeholder="Họ và Tên" value="@Model.Name">
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-12">
							<div class="form-group">
								<input name="Email" type="text" placeholder="Email" value="@Model.Email" autocomplete="off">
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-12">
							<div class="form-group">
								<input name="Phone_Number" type="text" placeholder="Số điện thoại" value="@Model.Phone_Number">
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-12">
							<div class="form-group">
								<select name="ChuyenKhoa" class="form-control wide" required>
									<option value="" disabled selected>Chọn chuyên khoa</option>
									<option value="Cardiac Clinic">Cardiac Clinic</option>
									<option value="Neurology">Neurology</option>
									<option value="Dentistry">Dentistry</option>
									<option value="Gastroenterology">Gastroenterology</option>
								</select>
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-12">
							<div class="form-group">
								<select name="BenhVienId" class="form-control wide" required>
									<option value="" disabled selected>Chọn bệnh viện</option>
									<!-- Dữ liệu bệnh viện sẽ được hiển thị từ ViewBag.BenhVienList -->
									@foreach (var benhVien in ViewBag.BenhVienList)
									{
										<option  value="@benhVien.Id">@benhVien.Name</option>
									}
								</select>
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-12">
							<div class="form-group">
								<input type="date" name="Appointment_Date" placeholder="Ngày khám"  required>
							</div>
						</div>
						<div class="col-lg-12 col-md-12 col-12">
							<div class="form-group">
								<textarea name="message" placeholder="Viết thêm ghi chú ở đây....."></textarea>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-5 col-md-4 col-12">
							<div class="form-group">
								<div class="button">
									<button type="submit" class="btn">Đặt Lịch Thăm Khám</button>
								</div>
							</div>
						</div>
						<div class="col-lg-7 col-md-8 col-12">
							<p>(Chúng tôi sẽ xác nhận qua tin nhắn)</p>
						</div>
					</div>
				</form>
			</div>
			<div class="col-lg-6 col-md-12">
				<div class="appointment-image">
					<img src="img/contact-img.png" alt="#">
				</div>
			</div>
		</div>
	</div>
</section>
